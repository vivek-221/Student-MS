@model IEnumerable<UserDetails>;
@{
    ViewData["Title"] = "Student MS";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-muted"> Student List</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-dark"><i class="bi bi-plus-circle-dotted"></i> &nbsp Add Student</a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Date of Creation
            </th>
            <th>

            </th>
        </tr>
       
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width:20%">
                    @obj.Name
                </td>
                <td style="width:40%">
                    @obj.Email
                </td>
                <td style="width:20%">
                    @obj.CreatedDateTime
                </td>
                <td>
                        <a asp-controller="User" asp-action="Edit" style="color:black; text-decoration:none" asp-route-id="@obj.Id"><i class="bi bi-pencil-fill"></i> &nbsp;Edit</a>
                        <a asp-controller="User" asp-action="Delete" style="color:black; text-decoration:none" class="m-4" asp-route-id="@obj.Id"><i class="bi bi-trash3-fill" style="color: red"></i> &nbsp;Delete</a> &nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

