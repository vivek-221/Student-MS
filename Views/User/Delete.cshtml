@model UserDetails

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 m-8" style="width:100%">
        <div class="row pb-2">
            <h2 class="text-muted"> Delete Student Details</h2>
        </div>
        <br />
        <div style="border:solid; color:lightslategrey;width:100%">
        </div>
        <br />
        <div class="row ml-2 mb-2">
            <label class="text-muted mt-2" asp-for="Name"></label> &nbsp
            <input asp-for="Name" disabled class="form-control" />
            <br />
            <br />
            <div class="ml-2">
            <button type="submit" class="btn btn-danger mt-3" style="width:150px;">Delete</button> &nbsp &nbsp; &nbsp; 
            <a asp-controller="User" asp-action="Index" class="btn btn-dark mt-3" style="width:150px;">Back to List</a>
        </div>
        </div>
    </div>
    
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}